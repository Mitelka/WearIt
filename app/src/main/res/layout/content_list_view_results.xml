<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:padding="15dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/itemImageView"
            android:layout_width="@dimen/item_image_size"
            android:layout_height="@dimen/item_image_size"
            android:layout_weight="0.11" />

        <TextView
            android:id="@+id/itemNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/itemImageView"
            android:layout_toRightOf="@id/itemImageView"
            android:paddingLeft="@dimen/item_name_padding"
            android:textColor="#333"
            android:textSize="@dimen/item_name_size"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/itemPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemNameTextView"
            android:layout_toEndOf="@id/itemImageView"
            android:layout_toRightOf="@id/itemImageView"
            android:paddingLeft="@dimen/item_description_padding"
            android:textSize="@dimen/item_descreption_size" />

        <TextView
            android:id="@+id/itemLinkTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemPriceTextView"
            android:layout_toEndOf="@id/itemImageView"
            android:layout_toRightOf="@id/itemImageView"
            android:paddingLeft="@dimen/item_description_padding"
            android:textSize="@dimen/item_descreption_size" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_below="@id/itemLinkTextView"
            android:layout_toEndOf="@id/itemImageView"
            android:layout_toRightOf="@id/itemImageView"
            android:paddingLeft="@dimen/item_description_padding">

            <TextView
                android:id="@+id/itemStarsTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/item_descreption_size"/>

            <ImageView
                android:id="@+id/starImageView"
                android:layout_width="@dimen/star_list_size"
                android:layout_height="@dimen/star_list_size"
                android:src="@drawable/yellowstar"/>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
