<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:layout_centerHorizontal="true">


    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textColor="#333"
        android:textSize="@dimen/recommended_item_name_size"
        android:textStyle="bold"
        android:gravity="center" />

    <ImageView
        android:id="@+id/itemImageView"
        android:layout_width="@dimen/recommended_item_image_size"
        android:layout_height="@dimen/recommended_item_image_size"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/itemNameTextView"/>

    <TextView
        android:id="@+id/itemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recommended_item_descreption_size"
        android:gravity="center"
        android:layout_below="@+id/itemImageView"/>

    <TextView
        android:id="@+id/itemLinkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/recommended_item_descreption_size"
        android:gravity="center"
        android:layout_below="@+id/itemPriceTextView"/>

</LinearLayout>
